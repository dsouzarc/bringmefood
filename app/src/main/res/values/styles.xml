<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabTextColorStyle</item>
    </style>

    <!-- ActionBar at top of screen -->
    <style name="MyActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/primary900</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabTextColorStyle</item>
    </style>

    <!-- Tab icons (My orders, New order) -->
    <style name="MyTabStyle" parent="android:Widget.DeviceDefault.ActionBar.TabView">
        <item name="android:background">@color/primary700</item>
        <item name="android:actionMenuTextColor">@color/primary100</item>
    </style>

    <style name="MyTabTextColorStyle" parent="android:Widget.DeviceDefault.ActionBar.TabText" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Light">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="New_Order_Edit_Text" parent="android:Widget.Holo.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:ems">10</item>
    </style>
</resources>